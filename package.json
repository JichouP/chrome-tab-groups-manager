{
  "name": "chrome-tab-groups-manager",
  "version": "1.0.1",
  "description": "A Chrome extension to manage tab groups",
  "main": "index.js",
  "scripts": {
    "build:prod": "webpack --config webpack.prod.ts && npm run generate",
    "build:dev": "webpack --config webpack.dev.ts",
    "test": "jest --color",
    "testWithCoverage": "jest --collectCoverage --color",
    "openCoverage": "sensible-browser ./coverage/lcov-report/index.html",
    "tsc_babel": "tsc babel.config.ts --esModuleInterop --lib es5 --skipLibCheck",
    "lint-staged": "lint-staged",
    "generate": "ts-node src/utils/generate.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JichouP/chrome-tab-groups-manager.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/JichouP/chrome-tab-groups-manager/issues"
  },
  "homepage": "https://github.com/JichouP/chrome-tab-groups-manager#readme",
  "devDependencies": {
    "@babel/core": "^7.13.15",
    "@babel/preset-env": "^7.13.15",
    "@babel/preset-typescript": "^7.13.0",
    "@types/archiver": "^5.1.0",
    "@types/chrome": "^0.0.134",
    "@types/copy-webpack-plugin": "^6.4.1",
    "@types/jest": "^26.0.22",
    "@types/webpack-node-externals": "^2.5.1",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "babel-jest": "^26.6.3",
    "babel-plugin-module-resolver": "^4.1.0",
    "copy-webpack-plugin": "^8.1.1",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-import-resolver-babel-module": "^5.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "fork-ts-checker-webpack-plugin": "^6.2.1",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "ts-loader": "^8.1.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4",
    "webpack": "^5.31.2",
    "webpack-cli": "^4.6.0",
    "webpack-merge": "^5.7.3",
    "webpack-node-externals": "^2.5.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{md,html,css}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "archiver": "^5.3.0"
  }
}
